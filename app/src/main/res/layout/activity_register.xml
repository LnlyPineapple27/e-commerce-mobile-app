<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Buyers.LoginActivity">

    <ImageView
        android:id="@+id/imageHeaderRegister"
        android:layout_width="match_parent"
        android:layout_height="280dp"
        android:scaleType="centerCrop"
        android:src="@drawable/login_theme"
        app:layout_constraintTop_toTopOf="parent"/>

    <View
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="@drawable/header_layer"
        app:layout_constraintBottom_toBottomOf="@id/imageHeaderRegister"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>

    <View
        android:id="@+id/viewSupporterRegister"
        android:layout_width="1dp"
        android:layout_height="1dp"
        android:layout_marginBottom="30dp"
        app:layout_constraintBottom_toBottomOf="@id/imageHeaderRegister"
        app:layout_constraintStart_toStartOf="parent"/>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:background="@drawable/login_background"
        android:paddingStart="30dp"
        android:paddingEnd="30dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@id/viewSupporterRegister">
        <TextView
            android:id="@+id/textWelcomeRegister"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Welcome Back"
            android:gravity="center"
            app:layout_constraintTop_toTopOf="parent"
            android:textSize="20sp"
            android:textStyle="bold"
            android:textColor="@color/black"
            android:layout_marginTop="25dp"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="10dp"/>
        <EditText
            android:id="@+id/register_username_input"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/textWelcomeRegister"
            android:layout_marginTop="30dp"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="10dp"
            android:background="@null"
            android:hint="Name"
            android:textColor="#212121"
            android:inputType="text"
            android:paddingStart="50dp"
            android:paddingEnd="10dp"
            android:textSize="15sp"/>
        <View
            android:id="@+id/viewDividerForNameRegister"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            app:layout_constraintTop_toBottomOf="@id/register_username_input"
            android:layout_marginTop="10dp"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="10dp"
            android:background="#808080"/>
        <ImageView
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:src="@drawable/ic_people_register"
            app:tint="#808080"
            android:layout_marginStart="10dp"
            app:layout_constraintBottom_toBottomOf="@id/register_username_input"
            app:layout_constraintStart_toStartOf="@id/register_username_input"/>
        <EditText
            android:id="@+id/register_phone_number_input"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="10dp"
            android:layout_marginTop="30dp"
            android:background="@null"
            android:hint="Phone Number"
            android:inputType="number"
            android:paddingStart="50dp"
            android:paddingEnd="10dp"
            android:textColor="#212121"
            android:textSize="15sp"
            app:layout_constraintTop_toBottomOf="@id/viewDividerForNameRegister"/>
        <View
            android:id="@+id/viewDividerForPhoneRegister"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#808080"
            app:layout_constraintTop_toBottomOf="@id/register_phone_number_input"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="10dp"
            android:layout_marginTop="10dp"/>
        <ImageView
            android:layout_width="20dp"
            android:layout_height="20dp"
            app:layout_constraintBottom_toBottomOf="@id/register_phone_number_input"
            app:layout_constraintStart_toStartOf="@id/register_phone_number_input"
            android:src="@drawable/ic_phone_login"
            app:tint="#808080"
            android:layout_marginStart="10dp"/>
        <EditText
            android:id="@+id/register_password_input"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="10dp"
            android:layout_marginTop="30dp"
            android:background="@null"
            android:hint="Password"
            android:inputType="textPassword"
            android:paddingStart="50dp"
            android:paddingEnd="10dp"
            android:textColor="#212121"
            android:textSize="15sp"
            app:layout_constraintTop_toBottomOf="@id/viewDividerForPhoneRegister"/>
        <View
            android:id="@+id/viewDividerForPasswordRegister"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#808080"
            app:layout_constraintTop_toBottomOf="@id/register_password_input"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="10dp"
            android:layout_marginTop="10dp"/>
        <ImageView
            android:layout_width="20dp"
            android:layout_height="20dp"
            app:layout_constraintBottom_toBottomOf="@id/register_password_input"
            app:layout_constraintStart_toStartOf="@id/register_password_input"
            android:src="@drawable/ic_lock_login"
            app:tint="#808080"
            android:layout_marginStart="10dp"/>
        <EditText
            android:id="@+id/confirm_register_password_input"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="10dp"
            android:layout_marginTop="30dp"
            android:background="@null"
            android:hint="Confirm Password"
            android:inputType="textPassword"
            android:paddingStart="50dp"
            android:paddingEnd="10dp"
            android:textColor="#212121"
            android:textSize="15sp"
            app:layout_constraintTop_toBottomOf="@id/viewDividerForPasswordRegister"/>
        <View
            android:id="@+id/viewDividerForConfirmPasswordRegister"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#808080"
            app:layout_constraintTop_toBottomOf="@id/confirm_register_password_input"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="10dp"
            android:layout_marginTop="10dp"/>
        <ImageView
            android:layout_width="20dp"
            android:layout_height="20dp"
            app:layout_constraintBottom_toBottomOf="@id/confirm_register_password_input"
            app:layout_constraintStart_toStartOf="@id/confirm_register_password_input"
            android:src="@drawable/ic_lock_login"
            app:tint="#808080"
            android:layout_marginStart="10dp"/>
        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/register_btn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_marginTop="35dp"
            android:layout_marginEnd="10dp"
            android:background="@drawable/round_button"
            android:backgroundTint="#131eea"
            app:layout_constraintTop_toBottomOf="@id/viewDividerForConfirmPasswordRegister"
            android:text="Create account"
            android:textColor="@color/white"
            android:textStyle="bold"
            android:textSize="18sp"
            android:textAllCaps="false"/>
        <TextView
            android:id="@+id/txtTermOfUse"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/register_btn"
            android:gravity="center"
            android:layout_marginTop="35dp"
            android:textSize="15sp"
            android:textColor="@color/black"
            android:text="By registering, you are agreeing to the Green Tea Terms of Use and Privacy Policy"/>
    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.constraintlayout.widget.ConstraintLayout>

